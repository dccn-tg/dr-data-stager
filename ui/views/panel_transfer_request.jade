div.container-fluid
    div.page-header
        h1= title_request
    <!-- dialog modal panel for job confirmation -->
    div.modal.fade#job_confirmation(role='dialog')
        div.modal-dialog
            div.modal-content
                div.modal-header
                    h4.modal-body#job_preview_header
                div.modal-body.scroll-able
                    p.job_preview: span#job_preview
                div.modal-footer
                    button.btn.btn-default#job_submit(data-dismiss="modal",type="button") Submit
                    button.btn.btn-danger#job_cancel(data-dismiss="modal",type="button") Cancel
    <!-- dialog modal panel for creating folder -->
    div.modal.fade#mkdir_dialog(role='dialog')
        div.modal-dialog
            div.modal-content
                div.modal-header
                    button.close(type="button", data-dismiss="modal", aria-label="Close")
                        span(aria-hidden="true") &times;
                    h4.modal-title#mkdir_dialog_title
                form.form-horizontal#mkdir_form
                    div.modal-body
                        div.alert.alert-danger.alert-dismissible#mkdir_dialog_alert
                            button.close(type="button",data-dismiss="alert", aria-label="Close")
                                span(aria-hidden="true") &times;
                            span#mkdir_dialog_alert_msg
                        input.form-control(type="hidden", id="mkdir_dialog_loc" name="mkdir_dialog_loc", value="")
                        input.form-control(type="hidden", id="mkdir_dialog_cwd" name="mkdir_dialog_cwd", value="")
                        div.input-group
                            div.input-group-addon#mkdir_dialog_cwd_display
                            input.form-control(type="text", id="mkdir_dialog_dir", name="mkdir_dialog_dir", placeholder="Your New Folder Name")
                    div.modal-footer
                        button.btn.btn-primary#submit_mkdir(type="button") Create
                        button.btn.btn-default#close_mkdir(data-dismiss="modal",type="button") Cancel
    <!-- main panel -->
    div.row#filetrees
        <!-- local panel -->
        div.col-md-5
            div.panel.panel-default
                div.panel-heading
                    span: strong #{fs_server_local}
                <!-- local login form -->
                div.panel-body#local_login_form
                    form.form-horizontal#login_form_local(method="post",action="#")
                        div.form-group
                            label.control-label.col-sm-4(for="username") Username:
                            div.col-sm-8
                                input.form-control#username(type="text",name="username",placeholder="#{fs_example_login_local}")
                        div.form-group
                            label.control-label.col-sm-4(for="password") Password:
                            div.col-sm-8
                                input.form-control#password(type="password",name="password")
                        div.form-group
                            div.col-sm-offset-4.col-sm-8
                                button.btn.btn-default#login_local(type="submit",name="login")
                                    i.fa.fa-sign-in
                                    span &nbsp;Login
                <!-- local filesystem treeview panel -->
                div.panel-body#filetree_local
                    ol.breadcrumb#cwd
                    div.filetree-panel#jstree
                <!-- local filesystem action panel -->
                div.panel-footer.clearfix#action_local
                    div.pull-right.btn-toolbar
                        div.btn-group
                            button.btn.btn-default#button_selectall_local
                                i.fa.fa-check-square-o(data-toggle="tooltip", title="select all")
                            button.btn.btn-default#button_deselectall_local
                                i.fa.fa-square-o(data-toggle="tooltip", title="deselect all")                      
                        div.btn-group
                            button.btn.btn-default#button_refresh_local
                                i.fa.fa-refresh(data-toggle="tooltip", title="refresh")
                            button.btn.btn-default.disabled#button_mkdir_local
                                i.fa.fa-plus(data-toggle="tooltip", title="new folder")
                            div.btn-group.dropup
                                button.btn.btn-default.dropdown-toggle.disabled(data-toggle="dropdown")#button_config_local
                                    i.fa.fa-gear
                        div.btn-group.dropup#button_user_local
                            button.btn.btn-success#fs_username_local
                            button.btn.btn-success.dropdown-toggle(data-toggle="dropdown")
                                span.caret
                            ul.dropdown-menu(role="manu")
                                li: a#button_logout_local(href="#")
                                    i.fa.fa-sign-out
                                    span &nbsp;Logout
        <!-- transfer action panel -->
        div.col-md-2
            div.list-group
                a.list-group-item.list-group-item-action#button_upload(href='#')
                    i.fa.fa-arrow-right
                    span &nbsp;Upload
                a.list-group-item.list-group-item-action#button_download(href='#')
                    i.fa.fa-arrow-left
                    span &nbsp;Download
        <!-- remote panel -->
        div.col-md-5
            div.panel.panel-default
                div.panel-heading
                    span: strong #{fs_server_remote}
                <!-- remote login form -->
                div.panel-body#remote_login_form
                    form.form-horizontal#login_form_remote(method="post",action="#")
                        div.form-group
                            label.control-label.col-sm-4(for="username") Username:
                            div.col-sm-8
                                input.form-control#username(type="text",name="username",placeholder="#{fs_example_login_remote}")
                        div.form-group
                            label.control-label.col-sm-4(for="password") Password:
                            div.col-sm-8
                                input.form-control#password(type="password",name="password")
                        div.form-group
                            div.col-sm-offset-4.col-sm-8
                                button.btn.btn-default#login_remote(type="submit",name="login")
                                    i.fa.fa-sign-in
                                    span &nbsp;Login
                <!-- remote filesystem treeview panel -->
                div.panel-body#filetree_remote
                    ol.breadcrumb#cwd
                    div.filetree-panel#jstree
                <!-- remote filesystem action panel -->
                div.panel-footer.clearfix#action_remote
                    div.pull-right.btn-toolbar
                        div.btn-group
                            button.btn.btn-default#button_selectall_remote
                                i.fa.fa-check-square-o(data-toggle="tooltip", title="select all")
                            button.btn.btn-default#button_deselectall_remote
                                i.fa.fa-square-o(data-toggle="tooltip", title="deselect all")      
                        div.btn-group
                            button.btn.btn-default#button_refresh_remote
                                i.fa.fa-refresh(data-toggle="tooltip", title="refresh")
                            button.btn.btn-default.disabled#button_mkdir_remote
                                i.fa.fa-plus(data-toggle="tooltip", title="new folder")
                            div.btn-group.dropup
                                button.btn.btn-default.dropdown-toggle.disabled(data-toggle="dropdown")#button_config_remote
                                    i.fa.fa-gear
                        div.btn-group.dropup#button_user_remote
                            button.btn.btn-success#fs_username_remote
                            button.btn.btn-success.dropdown-toggle(data-toggle="dropdown")
                                span.caret
                            ul.dropdown-menu(role="manu")
                                li: a#button_logout_remote(href="#")
                                    i.fa.fa-sign-out
                                    span &nbsp;Logout
